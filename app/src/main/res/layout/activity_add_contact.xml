<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameUtama"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/constraint_utama"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        layout="@layout/background_home"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="40dp" />
    <LinearLayout
        android:id="@+id/linear_back_tambahpelanggan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="75dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Tambah Pelanggan"/>
    </LinearLayout>
    <View
        android:id="@+id/line_add_contact"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_back_tambahpelanggan"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_input"/>
    <LinearLayout
        android:id="@+id/linear_nama"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_add_contact"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            app:tint="@color/black"
            android:layout_marginTop="7dp"
            android:id="@+id/person_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/person_24"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldName"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            android:hint="Nama">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_input_name"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_nohp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_nama"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            app:tint="@color/black"
            android:layout_marginTop="7dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/common_full_open_on_phone"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldNoHp"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            android:hint="No Hp, Cth : 081xxxxxxxxx">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_input_nohp"
                android:paddingVertical="7dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_alamat"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_nohp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/baseline_location_on_24"
            app:tint="@color/black" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLocation"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            android:hint="Alamat (Optional)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_input_alamat"
                android:paddingVertical="7dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:background="@drawable/background_yellow"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/linear_alamat"
        android:text="Tambahkan"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <include
        layout="@layout/activity_loading"/>
</FrameLayout>