<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginHorizontal="20dp"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_gray"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_icon"
        android:background="@drawable/background_yellow"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_dry_cleaning_24"
        android:layout_marginEnd="12dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_nama_layanan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pakaian Cuci Lipat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <View
                android:layout_width="15dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/black"
                android:layout_height="3dp"/>
            <TextView
                android:id="@+id/tv_nama_durasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Express"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:textColor="#000"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_harga_layanan"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Rp 7000"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnKurang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/baseline_horizontal_rule_24"/>
        <EditText
            android:id="@+id/etJumlah"
            android:inputType="numberDecimal"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="0.0" />
        <ImageButton
            android:id="@+id/btnTambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:contentDescription="Tambah"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</LinearLayout>
