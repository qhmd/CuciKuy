<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameUtama"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraint_utama"
        android:layout_height="match_parent">
        <include
            layout="@layout/background_home"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="40dp" />
        <LinearLayout
            android:id="@+id/linear_back_tambahlayanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="75dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Tambah Layanan"/>
        </LinearLayout>
        <View
            android:id="@+id/line_add_layanan"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_back_tambahlayanan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_input"/>
        <LinearLayout
            android:id="@+id/linear_nama"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_add_layanan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                app:tint="@color/black"
                android:layout_marginTop="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_navigate_next_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_input_name_layanan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="13dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_durasi"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_nama"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                app:tint="@color/black"
                android:layout_marginTop="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_navigate_next_24"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dropdown_layananlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pilih Durasi">
                <AutoCompleteTextView
                    android:id="@+id/dropdown_layanan"
                    android:paddingVertical="13dp"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_harga"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_durasi"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_navigate_next_24"
                app:tint="@color/black" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldHarga"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:errorEnabled="true"
                android:layout_height="50dp"
                android:hint="Harga">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_input_harga"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="numberDecimal"
                    android:paddingVertical="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_add_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:background="@drawable/background_yellow"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/linear_harga"
            android:text="Tambahkan"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        layout="@layout/activity_loading"/>
</FrameLayout>