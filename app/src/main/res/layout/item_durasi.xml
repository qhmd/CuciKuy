<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:gravity="center_vertical"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvJam"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="72"/>
    <TextView
        android:id="@+id/tvTextJam"
        app:layout_constraintStart_toEndOf="@id/tvJam"
        app:layout_constraintTop_toTopOf="@id/tvJam"
        app:layout_constraintBottom_toBottomOf="@id/tvJam"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:text="Jam"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvNamaDurasi"
        app:layout_constraintStart_toStartOf="@id/tvJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reguler"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvJam"
        android:textStyle="italic|bold"/>
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/editDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:src="@drawable/baseline_edit_24"
            android:background="@drawable/background_yellow"/>
        <ImageView
            android:id="@+id/deleteDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/baseline_delete_24"
            android:background="@drawable/background_yellow"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>