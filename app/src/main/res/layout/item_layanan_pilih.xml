<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icon Layanan -->
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_dry_cleaning_24" />

    <!-- Nama Layanan -->
    <TextView
        android:id="@+id/tv_nama_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Layanan"
        android:textSize="16sp"
        />

    <!-- Harga Layanan -->
    <TextView
        android:id="@+id/tv_harga_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textSize="16sp"
        android:layout_marginEnd="16dp" />

    <!-- Durasi Layanan -->
    <TextView
        android:id="@+id/tv_durasi_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durasi"
        android:textSize="14sp"
        android:layout_marginEnd="16dp" />

    <!-- Jumlah Kilogram -->
    <TextView
        android:id="@+id/tv_jumlah_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.01 kg"
        android:textSize="14sp"
        android:layout_marginEnd="16dp" />

    <!-- Tombol Tambah -->
    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="18sp" />

    <!-- Tombol Kurang -->
    <Button
        android:id="@+id/btn_kurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="18sp" />
</LinearLayout>
