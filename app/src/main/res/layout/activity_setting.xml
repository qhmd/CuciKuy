<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/judul_setting"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Pengaturan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line_in_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/judul_setting"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:id="@+id/pengaturan_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/line_in_setting"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_pengaturan_logo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_yellow"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/person_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan Akun"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Password Anda" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pengaturan_toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/pengaturan_akun"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_pengaturan_toko"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_yellow"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/baseline_store_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan Toko"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah nama, alamat dan no hp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pengaturan_durasi_layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/pengaturan_toko"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_durasi"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_yellow"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/timer_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan Toko"
                android:textStyle="bold"/>chchchjasj
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah nama, alamat dan no hp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>